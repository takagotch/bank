<!DOCTYPE html>
<html>
<head>
  <title>Takagotch Financial Groups</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Takagotch Financial Groups" %>
  </div>
  <div id="columns">
    <div id="side">
    <div id="cart"
      <% if @cart.line_items.empty? %>
        style="display: none"
      <% end %>
      >
      <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
        <%= render @cart %>
      <% end %>
      </div>

      <a href="http://www....">HOME</a><br />
      <a href="http://www..../faq">Qustions</a><br />
      <a href="http://www..../news">News</a><br />
      <a href="http://www..../contact">Contacts</a><br />
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
