
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1><Catalog></h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price_line"><%= number_to_currency(product.price) %></span>
      <%= button_to 'takein carts', line_items_path(product_id: product),
        remove: true %>
    </div>
  </div>
<% end %>

